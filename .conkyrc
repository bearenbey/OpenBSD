# Conky Settings
use_xft yes
xftfont DejaVu Sans:size=10
xftalpha 1
update_interval 1
total_run_times 0
own_window yes
own_window_transparent no
own_window_type normal
own_window_hints sticky,undecorated,skip_taskbar,skip_pager,below
double_buffer yes
draw_shades no
draw_outline no
draw_borders no
border_width 0
default_color black
default_shade_color black
own_window_colour ffffff
alignment top_left
gap_x 10
gap_y 30
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale no

TEXT
${font spleen:size=11}cpui
${color #ffaaaa}${cpubar cpu0 30,350}
${color #000000}cpuii
${color #9eefef}${cpubar cpu1 30,350}
${color #000000}load
${color #00aaff}${loadgraph 30,350}
${color #000000}mem
${color #efef9e}${memgraph 30,350}
